{% extends 'MarvelAssetsBundle:Default:base.html.twig' %}

{% block stylesheet %}
    {% stylesheets filter="scssphp" filter='cssrewrite'
    	'@MarvelAssetsBundle/Resources/public/css/fileinput.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block content %}
<div id="content-header">
	<div id="breadcrumb"> 
		<a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Beranda</a> 
		<a href="#" class="tip-bottom">Proyek Developer</a> 
		<a href="#" class="current">Tambah Data</a> 
	</div>
	<h1>Tambah Data Proyek Developer</h1>
</div>

<div class="container-fluid">
	<hr>
	<div class="row-fluid">
	<form id="postProyek" enctype="multipart/form-data">
		<div class="span6">
	    	<div class="widget-box">
	        	<div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
	          		<h5>Info Proyek</h5>
	        	</div>
	        	<div class="widget-content nopadding">
		          	<span class="form-horizontal">
		            	<div class="control-group">
		              		<label class="control-label">Nama Proyek :</label>
		              		<div class="controls">
		                		<input type="text" name="projectName" id="projectName" class="span11" placeholder="Hunilo Gading Residence" />
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Tipe Proyek :</label>
		              		<div class="controls">
		                		<select id="propertyType" name="propertyType" >
				                </select>
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Nama Developer :</label>
		              		<div class="controls">
		                		<select id="developerName" name="developerName" >
		                			<option value="0">Pilih Developer</option>
				                </select>
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Harga :</label>
		              		<div class="controls controls-row">
					            <input type="text" name="startPrice" id="startPrice" placeholder="235.000.000" class="span5 m-wrap" onkeypress="return isNumberKey(event)" onkeyup="numberFormat(this)" autocomplete="off">
					            <input type="text" name="endPrice" id="endPrice" placeholder="400.000.000" class="span5 m-wrap" onkeypress="return isNumberKey(event)" onkeyup="numberFormat(this)" autocomplete="off">
					        </div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Judul Tagline :</label>
		              		<div class="controls">
		                		<input type="text" id="titleTagline" name="titleTagline" class="span11" placeholder="Perumahan berfasilitas apartemen" />
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Sub Judul Tagline :</label>
		              		<div class="controls">
		                		<input type="text" id="subtitleTagline" name="subtitleTagline" class="span11" placeholder="Hanya 1 km dari exit toll Jatiwarna Bekasi" />
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Judul Tagline Deskripsi :</label>
		              		<div class="controls">
		                		<input type="text" id="titleTaglineDesc" name="titleTaglineDesc" class="span11" placeholder="Your Smart Living at Jatiwarna" />
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Deskripsi :</label>
		              		<div class="controls">
		                		<textarea id="desc" name="desc" class="span11" placeholder="Hunilo Gading Residence merupakan..." ></textarea>
		              		</div>
		            	</div>
		          	</span>
	        	</div>
			</div>

			<div class="widget-box">
	        	<div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
	          		<h5>Lokasi Proyek</h5>
	        	</div>
	        	<div class="widget-content nopadding">
		          	<span class="form-horizontal">
		            	<div class="control-group">
		              		<label class="control-label">Provinsi :</label>
		              		<div class="controls">
		                		<select id="province" name="province" >
		                			<option value="0">Pilih Provinsi</option>
				                </select>
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Kota :</label>
		              		<div class="controls">
		                		<select id="city" name="city" >
				                  <option value="0">Pilih Kota</option>
				                </select>
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Area :</label>
		              		<div class="controls">
		                		<select id="area" name="area" >
				                  <option value="0">Pilih Area</option>
				                </select>
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Alamat Lengkap :</label>
		              		<div class="controls">
		                		<textarea id="address" name="address" class="span11" placeholder="Jl. Vanilla IIB No 31" ></textarea>
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Kodepos :</label>
		              		<div class="controls">
		                		<input id="postcode" name="postcode" type="text" class="span11" placeholder="12820" />
		              		</div>
		            	</div>
		          	</span>
	        	</div>
			</div>

			<div class="widget-box">
	        	<div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
	          		<h5>Detail Deskripsi Proyek</h5>
	        	</div>
	        	<div class="widget-content nopadding">
		          	<span class="form-horizontal">
		            	<div class="control-group">
		              		<label class="control-label">Fasilitas :</label>
		              		<div class="controls">
		                		<textarea id="facility" name="facility" class="span11" placeholder="Keamanan 24 Jam, Angkutan Umum, Rumah Sakit, dll" ></textarea>
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Akses Lokasi :</label>
		              		<div class="controls">
		                		<textarea id="access" name="access" class="span11" placeholder="10 Menit ke Universitas Mercu Buana, 15 Menit ke Stasiun KRL, dll" ></textarea>
		              		</div>
		            	</div>
		            	<!--
		            	<div class="control-group">
			              	<label class="control-label">Keunggulan :</label>
			              	<div class="controls">
			                	<label>
			                  	<input type="checkbox" name="radios" />
			                  	Lokasi Strategis</label>
			                	<label>
			                  	<input type="checkbox" name="radios" />
			                  	Lokasi Favorit</label>
			                	<label>
			                  	<input type="checkbox" name="radios" />
			                  	Nilai Investasi Tinggi</label>
			                	<label>
			                  	<input type="checkbox" name="radios" />
			                  	Green Concept</label>
			              	</div>
			            </div>
			            <div class="control-group">
			              	<label class="control-label">Cocok Untuk :</label>
			              	<div class="controls">
			                	<label>
			                  	<input type="checkbox" name="radios" />
			                  	First Time Home Buyer</label>
			                	<label>
			                  	<input type="checkbox" name="radios" />
			                  	Potentian Buyer</label>
			                	<label>
			                  	<input type="checkbox" name="radios" />
			                  	Modern House</label>
			                	<label>
			                  	<input type="checkbox" name="radios" />
			                  	Family Oriented</label>
			                  	<label>
			                  	<input type="checkbox" name="radios" />
			                  	Commercial Seeker</label>
			              	</div>
			            </div>
			            -->
		          	</span>
	        	</div>
			</div>
		</div>


		<div class="span6">
	    	<div class="widget-box">
	        	<div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
	          		<h5>Unit Proyek</h5>
	        	</div>
	        	<div class="widget-content nopadding">
		          	<span class="form-horizontal">
		          		<span class="listUnit">
		            	<div class="control-group">
		              		<label class="control-label">Total Unit :</label>
		              		<div class="controls">
		                		<input type="text" name="unitTotalAll" id="unitTotalAll" class="span11" placeholder="18" />
		              		</div>
		            	</div>

		            	<div class="control-group">
		              		<label class="control-label">Nama Unit :</label>
		              		<div class="controls">
		                		<input type="text" name="unitName[]" id="unitName" class="span11" placeholder="Lavenia 2" />
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Jumlah Unit :</label>
		              		<div class="controls">
		                		<input type="text" name="unitTotal[]" id="unitTotal" class="span11" placeholder="6" />
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Harga :</label>
		              		<div class="controls">
		                		<input type="text" name="unitPrice[]" id="unitPrice" class="span11" placeholder="180.000.000" onkeypress="return isNumberKey(event)" onkeyup="numberFormat(this)" autocomplete="off" />
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Tipe :</label>
		              		<div class="controls">
		                		<input type="text" name="unitType[]" id="unitType" class="span11" placeholder="90" />
		              		</div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">LT/LB :</label>
		              		<div class="controls controls-row">
					            <input type="text" name="unitLT[]" id="unitLT" placeholder="LT (120)" class="span5 m-wrap">
					            <input type="text" name="unitLB[]" id="unitLB" placeholder="LB (90)" class="span5 m-wrap">
					        </div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">KT/KM :</label>
		              		<div class="controls controls-row">
					            <input type="text" name="unitKT[]" id="unitKT" placeholder="KT (3)" class="span5 m-wrap">
					            <input type="text" name="unitKM[]" id="unitKM" placeholder="KM (1)" class="span5 m-wrap">
					        </div>
		            	</div>
		            	<div class="control-group">
		              		<label class="control-label">Spesifikasi :</label>
		              		<div class="controls">
		                		<textarea class="span11" name="unitSpesifikasi[]" id="unitSpesifikasi" placeholder="Pondasi : Pondasi tapak + batu kali + sloof beton bertulang, Struktur : Beton bertulang" ></textarea>
		              		</div>
		            	</div>

			            </span>

		            	<div class="form-actions">
			              <button type="button" class="btn btn-success addUnit">Tambah Unit</button>
			            </div>
		          	</span>
	        	</div>
			</div>
		</div>

		<div class="row-fluid">
		    <div class="widget-box">
		    	<div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
		        	<h5>Upload Foto Properti</h5>
		      	</div>
		      	<div class="widget-content">
		        	<div class="control-group image-upload">
		          		<input id="file-5" class="file" type="file" multiple name="gallery[]" id="gallery[]">
						<p class="help-block">Anda bisa menambahkan sebanyak 20 foto untuk produk Anda</p>
		        	</div>
		      	</div>
		    </div>
		</div>

		<div class="row-fluid">
		    <div class="widget-box">
		    	<div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
		        	<h5>Upload Foto Denah Properti</h5>
		      	</div>
		      	<div class="widget-content">
		        	<div class="control-group image-upload">
		          		<input id="file-6" class="file" type="file" multiple name="denah[]" id="denah[]">
						<p class="help-block">Anda bisa menambahkan sebanyak 10 foto untuk produk Anda</p>
		        	</div>
		      	</div>
		    </div>
		</div>

		<div class="row-fluid">
			<div class="form-actions" id="loading" style="display:none;">
            	LOADING....
            </div>
            <input type="hidden" name="token_gallery" id="token_gallery" value="gallery_{{token}}">
		   	<input type="hidden" name="token_denah" id="token_denah" value="denah_{{token}}">
		   	<input type="hidden" name="gallerySetPrimary" id="gallerySetPrimary" value="">
			<input type="hidden" name="denahSetPrimary" id="denahSetPrimary" value="">
		    <div class="form-actions" id="btn">
		    	<button type="submit" class="btn btn-success">Save</button>
		    </div>
		</div>
	</form>
	</div>
</div>
{% endblock %}

{% block javascript %}
    {% javascripts filter="?jsqueeze"
    	'@MarvelAssetsBundle/Resources/public/js/bootstrap-colorpicker.min.js' 
	    '@MarvelAssetsBundle/Resources/public/js/bootstrap-datepicker.min.js'
	    '@MarvelAssetsBundle/Resources/public/js/jquery.uniform.custom.min.js' 
	    '@MarvelAssetsBundle/Resources/public/js/select2.min.js'
	    '@MarvelAssetsBundle/Resources/public/js/fileinput.min.js'
	    '@MarvelAssetsBundle/Resources/public/js/jquery.validate.min.js'
    	'@MarvelAssetsBundle/Resources/public/js/matrix.form_common.min.js' 
    	'@MarvelAssetsBundle/Resources/public/js/jquery.peity.min.js'
    	'@MarvelAssetsBundle/Resources/public/js/matrix.popover.min.js'  
    	'@MarvelAssetsBundle/Resources/public/js/proyek.developer.min.js' 
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}