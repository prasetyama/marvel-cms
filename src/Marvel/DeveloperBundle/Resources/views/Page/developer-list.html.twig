{% extends 'MarvelAssetsBundle:Default:base.html.twig' %}

{% block content %}
<div id="content-header">
	<div id="breadcrumb"> 
		<a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Beranda</a> 
		<a href="#" class="tip-bottom">Developer</a> 
		<a href="#" class="current">List Data</a> 
	</div>
	<h1>Daftar Data Developer</h1>
</div>

<div class="container-fluid">
	<hr>
	<div class="row-fluid">
		<div class="span12">
      <div class="widget-box">
          <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
            <h5>List Data</h5>
          </div>
          <div class="widget-content nopadding">
            <table class="table table-bordered data-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nama</th>
                  <th>Email</th>
                  <th>Alamat</th>
                  <th>No Tlp</th>
                  <th>No Hp</th>
                  <th>Terdaftar</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              {% for list in data %}
                <tr>
                  <td>{{list.developer_id}}</td>
                  <td>{{list.developer_name}}</td>
                  <td>{{list.developer_email}}</td>
                  <td>{{list.developer_address}}</td>
                  <td>{{list.developer_phone}}</td>
                  <td>{{list.developer_mobilephone}}</td>
                  <td>{{list.post_date}}</td>
                  <td><a href="/developer/edit/{{list.developer_id}}"><span class="icon"><i class="icon-edit"></i></span></a> || <span class="icon"><i class="icon-trash"></i></span></td>
                  <!--<td class="center">4</td>-->
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>    
    </div>	
	</div>
</div>
{% endblock %}

{% block javascript %}
    {% javascripts filter="?jsqueeze"
      '@MarvelAssetsBundle/Resources/public/js/jquery.uniform.min.js' 
      '@MarvelAssetsBundle/Resources/public/js/select2.min.js'
      '@MarvelAssetsBundle/Resources/public/js/jquery.peity.min.js'
      '@MarvelAssetsBundle/Resources/public/js/matrix.popover.min.js'
      '@MarvelAssetsBundle/Resources/public/js/jquery.dataTables.min.js' 
      '@MarvelAssetsBundle/Resources/public/js/matrix.tables.min.js' 
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}